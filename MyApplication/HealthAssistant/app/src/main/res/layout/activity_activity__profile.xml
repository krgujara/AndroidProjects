<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.example.android.myapplication.Activity_Screen1">


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@android:color/holo_orange_light"
    tools:context="com.example.android.myapplication.Activity_Screen1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:text="Upload Your Photo" />

    <ImageView
        android:id="@+id/imgprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="0"
        android:src="@drawable/profile3" />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Name"
        />


    <EditText
        android:id="@+id/etname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="1"
        />

    <TextView
        android:id="@+id/tvbirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="BirthDate"
        />

    <!--<EditText
        android:id="@+id/etbirth"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="2"
        />-->

    <Button android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonDate"
        android:text="SELECT DATE"
        android:layout_column="3"
        android:layout_row="2"
        />


    <TextView
        android:id="@+id/tvgender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:text="Gender"
        />

<!--
    <EditText
        android:id="@+id/etgender"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="3"
        />
-->

    <Spinner android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner1"
        >
    </Spinner>

    <TextView
        android:id="@+id/tvbloodgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="4"
        android:text="Blood Group"
        />

    <EditText
        android:id="@+id/etbloodgroup"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="4"
        />


    <TextView
        android:id="@+id/tvaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="5"
        android:text="Address"

        />

    <EditText
        android:id="@+id/etaddress"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="5"
        />

    <TextView
        android:id="@+id/tvfamdtcname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="6"
        android:text="Family Doctor"

        />

    <EditText
        android:id="@+id/etfamdtrname"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="6"
        />


    <TextView
        android:id="@+id/tvfamdtrmobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="7"
        android:text="Family Doctor Mobile"

        />

    <EditText
        android:id="@+id/etfamdtrmobile"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_row="7"
        />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnsav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SAVE PROFILE"/>
        <Button
            android:id="@+id/btnrefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="REFRESH DATA"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btnview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="VIEW PROFILE"
        />
</LinearLayout>