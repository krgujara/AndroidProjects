<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical"
    tools:context="com.example.android.myapplication.Activity_Screen1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relImage">

        <ImageView
        android:id="@+id/imgprofile"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content"
        android:src="@drawable/profile3"
        />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/etname"
            android:textSize="24dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:fontFamily="serif-monospace"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:layout_toRightOf="@id/tvname"
            android:layout_column="3"
        />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/etbirth"
                android:layout_width="150dp"
                android:textSize="24dp"
                android:layout_weight="1"
                android:fontFamily="serif-monospace"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:paddingTop="@dimen/activity_vertical_margin">
            </TextView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/etgender"
            android:textSize="24dp"
            android:fontFamily="serif-monospace"
            android:layout_width="150dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textAllCaps="true" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/etbloodgroup"
            android:textAllCaps="true"
            android:textSize="24dp"
            android:fontFamily="serif-monospace"
            android:layout_width="150dp"

            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/etaddress"
            android:textSize="24dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:layout_width="150dp"
            android:textAllCaps="true"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvfamdtcname"
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:fontFamily="serif-monospace"
            android:layout_height="wrap_content"
            android:text="DOCTOR'S NAME-"
            />

        <TextView
            android:id="@+id/etfamdtrname"
            android:textSize="24dp"
            android:layout_below="@id/etaddress"
            android:fontFamily="serif-monospace"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAllCaps="true"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@+id/tvfamdtcname"
            android:layout_toRightOf="@+id/tvfamdtcname" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvfamdtrmobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="DCTR'S MOBILE-"
            />

        <TextView
            android:id="@+id/etfamdtrmobile"
            android:layout_width="150dp"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:textSize="24dp"
            android:layout_weight="1"
            android:fontFamily="serif-monospace"
            android:textAllCaps="true"
            android:layout_height="wrap_content" />
         </LinearLayout>


    </LinearLayout>